<%= render "shared/navbar" %>
<div class="container">
<div class="row">


<div class="col-12">
  <h1 style="color:white">Hey
  <% if current_user %>
    <%= current_user.first_name %>
  <%end%>, <h1 style="color:white"><br>GAMES 🏓 </h1>

<h2 style="color:white">Upcoming events</h2>
<% @upcoming_events.each do |event|  %>
<div style = "display: flex; align-items: center;" class = "request_card <%=event.category%>" >
  <h3 style="color:white"><%= event.name %></h3>
  <p style="color:white;margin-bottom:0;">It's time for <i><%= event.category %></p>
  <p style="color:white;margin-bottom:0;">Where?⛳️ <%= event.location %></p>
  <p style="color:white;margin-bottom:0;">When?⏱ <%= event.start_time %></p>
  <p style="color:white">
  <%if event.user == current_user %>
    <h5 style="color:white;">You are the <strong> host </strong> of this event! Get ready for some sporty activity!</h5>
  <%else %>
    <h5 style="color:white">Your host is 🤠: <%= event.user.first_name %></h5>
  <%end %>
<% end %>
</div>

<h2 style="color:white">Past events</h2>
<% @past_events.each do |event|  %>
<div style = "display: flex; align-items: center;" class = "request_card <%=event.category%>" >
  <h3 style="color:white"><%= event.name %></h3>
  <p style="color:white;margin-bottom:0;">It's time for <i><%= event.category %></p>
  <p style="color:white;margin-bottom:0;">Where?⛳️ <%= event.location %></p>
  <p style="color:white;margin-bottom:0;">When?⏱ <%= event.start_time %></p>
  <p style="color:white">
  <%if event.user == current_user %>
    <h5 style="color:white;">You are the <strong> host </strong> of this event! Get ready for some sporty activity!</h5>
  <%else %>

    <h5 style="color:white">Your host is 🤠: <%= event.user.first_name %></h5>
  <%end%>
  <button type="button" class="btn btn-primary monday" data-toggle="modal" data-target="#reviewModal">Review</button>
  </div>
  <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <#%= render "reviews/review_partial", event: event%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
</div>
</div>
</div>
