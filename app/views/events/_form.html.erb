
<div>
  <%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :category, :collection => %w[Basketball, Weightlifting, Tennis, Soccer, Yoga, Hiking, Running] %>
  </div>


  <div class="form-inputs">
    <%= f.input :location %>
  </div>

  <div class="form-inputs">
    <%= f.input :capacity %>
  </div>

  <div class="form-inputs">
    <%= f.input :skill_level %>
  </div>

  <div class="form-inputs">
    <%= f.input :start_time %>
  </div>

  <div class="form-inputs">
    <%= f.input :end_time %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

  <% end %>
</div>
